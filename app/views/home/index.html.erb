

    <h2>Current Activities</h2>
    <table class="listing">
  <tr>
      <th><%=order(@search, :by => :short_name, :as => "Rulemaking") %></th>
      <th>Project Manager</th>
      <th><%=order(@search, :by => :phase, :as=>"Actual Phase <br> (as of 2/19/2010)") %></th>
      <th><%=order(@search, :by => :activity, :as=>"Actual Activity <br> (as of 2/19/2010)") %></th>
      <th><%=order(@search, :by => 'milestone_phase', :as=>"Scheduled Phase") %></th>
      <th><%=order(@search, :by => 'milestone_activity', :as=>"Scheduled Activity") %></th>
      <th>Legislative Deadline</th>
      <th><%=order(@search, :by => :milestone, :as => "Projected Finish") %></th>
      <th>Schedule Lag</th>

  </tr>
  <% @current.each do |milestone| %>
  <tr class="listing <%= cycle('odd', 'even') %>" >
    <td class="attribute"><%=h milestone.rulemaking.short_name %></td>
    <td class ="listing"><%= h milestone.rulemaking.doe_project_manager.try(:project_manager) %> </td>
    <td class ="listing"><%= h milestone.rulemaking.phase.phase %> </td>
    <td class ="listing"><%= h milestone.rulemaking.activity.try(:activity)  %> </td>
    <td class ="listing"><%= h milestone.phase.try(:phase) %> </td>
    <td><%= h milestone.activity.activity %> </td>
    <td class ="listing"><%= h milestone.rulemaking.legislative_deadline %> </td>
    <td><%= h milestone.milestone %></td>
    <% planned_start = @planned_starts.detect{|i|i.rulemaking_id == milestone.rulemaking_id and i.phase_id == milestone.phase_id and i.activity_id == milestone.activity_id and i.date_category_id == 2}  %>
    <td>
        <% if  planned_start && milestone.rulemaking.legislative_deadline && (milestone.rulemaking.legislative_deadline - milestone.milestone) != 0 %>
          <%=  number_to_percentage(100 * (milestone.milestone  -  planned_start.milestone).to_d / (milestone.rulemaking.legislative_deadline  -  milestone.milestone).to_d) %>
        <% else %>
          --
        <% end  %>
    </td>
  </tr>
  <%  end %>
    </table>


