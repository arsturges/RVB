<!DOCTYPE html>
<html>
<head>
  <title>DALM: <%= controller.action_name %></title>
  <%= javascript_include_tag 'jquery', 'jquery.tablednd_0_5', 'jquery.form', 'jquery.dragsort-0.3', 'jquery.autocomplete', 'cycle', 'admin', 'rails', 'application', :cache => true %>
  <%= stylesheet_link_tag 'reset', 'cockpit', 'admin' %> 
</head>
<body>
    <div id="identity">
      <h1>DOE Appliance Legislation</h1>
      <% if logged_in? %>

        <h3>You are logged in as <%=h current_user.login %>.
        <%= link_to 'Log out', logout_path %></h3>
      <% else %>
        <h3><%= link_to 'Log in', login_path %></h3>
  <% end %>
    </div>
    
    <div id="wrapper">
      <div id="container">
        <div class="banner section">
          <%= render :partial => 'layouts/navigation' %>
        </div>
        <div class="header section">
          <h1><%= yield :title %></h1>
          <%- if (header = yield :header) && !@show_header == true %>
            <%= header %>
          <% end %>
        </div>
        <div class="content section">
          <%= reports_for_page %>
          <%= yield %>
        </div>
      </div>
    </div>
</body>
</html>
