<h1>Listing rulemakings</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Rule</th>
    <th>Rule type</th>
    <th>Notes</th>
    <th>DOE project manager</th>
    <th>Legislative Deadline</th>
    <th>Phase</th>
    <th>Activity</th>
    <th>Short name</th>
  </tr>

<% @rulemakings.each do |rulemaking| %>
  <tr>
    <td class="attribute string"><%=h rulemaking.id %></td>
    <td class="attribute string"><%= link_to rulemaking.rule, rulemaking %></td>
    <td class="attribute string"><%=h rulemaking.rule_type.rule_type_abbreviation %></td>
    <td class="attribute string"><%=h rulemaking.notes %></td>
    <td class="attribute string"><%=h rulemaking.doe_project_manager.try(:project_manager) %></td>
    <td class="attribute string"><%=h rulemaking.legislative_deadline.to_formatted_s(:long) if rulemaking.legislative_deadline %></td>
    <td class="attribute string"><%=h rulemaking.phase_id %></td>
    <td class="attribute string"><%=h rulemaking.activity_id %></td>
    <td class="attribute string"><%=h rulemaking.short_name %></td>
    <% if admin? %>
    <td class="button edit"><%= link_to 'Edit', edit_rulemaking_path(rulemaking) %></td>
    <td class="button delete" ><%= link_to 'Destroy', rulemaking, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'New rulemaking', new_rulemaking_path if admin? %>

