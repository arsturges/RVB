<h1>Listing drivers</h1>

<table>
  <tr>
    <th>Driver</th>
  </tr>

<% @drivers.each do |driver| %>
  <tr>
    <td><%=h driver.driver %></td>
    <% if admin? %>
    <td><%= link_to 'Edit', edit_driver_path(driver) %></td>
    <td><%= link_to 'Destroy', driver, :confirm => 'Are you sure?', :method => :delete %></td>
    <%  end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New driver', new_driver_path if admin? %>