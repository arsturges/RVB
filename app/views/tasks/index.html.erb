<h1>Listing tasks</h1>

<table class="datatable">
  <tr>
    <th>Task</th>
    <th>Task abbreviation</th>
    <th>Sort</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%=h task.task %></td>
    <td><%=h task.task_abbreviation %></td>
    <td><%=h task.sort %></td>

  <% if admin?  %>
      <td><%= link_to 'Edit', edit_task_path(task) %></td>
      <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
<% if admin? %>
  <%= link_to 'New task', new_task_path, :class=>"button" %>
<% end %>